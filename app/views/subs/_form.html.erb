<div class="collapse" id="self"><br/>
  <div class="card card-body">
    <%= form_with(model: sub, url: "/subs") do |form| %>

      <div class="field">
        <%= form.text_field :sub_name, class:"form-control",
        placeholder: "サービス名" %>
      </div><br/>

      <div class="field row ">
        <div class="col-auto">
          <%= form.number_field :fee, class:"form-control",
          placeholder: "料金" %>
        </div>

        <div class="col-auto">
          <%= form.select :period, {"/月": "/月", "/年": "/年"}, {},
          {class: "form-select"} %>
        </div>
      </div>
      
      <br/>

      <div class="actions">
        <%= form.submit "追加", class:"btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>


