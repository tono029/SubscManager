<div class="field row">
  <div>
    <%= form.label "サービス名" %>
    <%= form.text_field :sub_name, class:"form-control shadow",
    autofocus: true %>
  </div>
</div><br/>

<div class="field row justify-content-between">
  <%= form.label "料金" %>
  <div class="col-8">
    <%= form.number_field :fee, class:"form-control shadow" %>
  </div>

  <div class="col-auto">
    <%= form.select :period, {"/月": "/月", "/年": "/年"}, {},
    {class: "form-select shadow"} %>
  </div>
</div><br/>

<div class="field row">
  <div>
    <%= form.label "リンク先" %>
    <%= form.url_field :url, class: "form-control shadow",
    placeholder: "空白可" %>
  </div>
  
</div>


